 <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg mx-auto px-4 sm:px-8 md:px-16 lg:px-32">
        <h2 class="text-2xl font-bold mb-6 text-center">個人情報入力フォーム</h2>

        <form action="<%= form_action %>" method="POST" class="space-y-4">
            <input type="hidden" name="authenticity_token" value="<%= session[:csrf] %>">
            <div>
                <label class="block text-gray-700">氏</label>
                <input type="text" name="last_name" class="w-full p-2 border border-gray-300 rounded">
            </div>

            <div>
                <label class="block text-gray-700">名</label>
                <input type="text" name="first_name" class="w-full p-2 border border-gray-300 rounded">
            </div>
            
            <div>
                <label class="block text-gray-700">性別</label>
                <div class="flex items-center space-x-4">
                    
                    <label for="not_answered">
                        <input type="radio" id="not_answered" name="gender" value="not_answered" class="form-radio text-gray-600" checked>
                        未回答
                    </label>
                    
                    <label for="male">
                        <input type="radio" id="male" name="gender" value="male" class="form-radio text-blue-600">
                        男性
                    </label>
                    
                    <label for="female">
                        <input type="radio" id="female" name="gender" value="female" class="form-radio text-pink-600">
                        女性
                    </label>
                </div>
            </div>

            <div>
                <label class="block text-gray-700">生年月日</label>
                <input type="date" name="birth_date" class="w-full p-2 border border-gray-300 rounded">
            </div>

            <div>
                <label class="block text-gray-700">年齢</label>
                <input type="integer" name="age" class="w-full p-2 border border-gray-300 rounded">
            </div>
            
            <div>
                <label class="block text-gray-700">近隣の場所</label>
                <input type="text" name="locality" class="w-full p-2 border border-gray-300 rounded">
            </div>
    
            <div>
                <label class="block text-gray-700">市区町村</label>
                <input type="text" name="city" class="w-full p-2 border border-gray-300 rounded">
            </div>
    
            <div>
                <label class="block text-gray-700">都道府県</label>
                <input type="text" name="state" class="w-full p-2 border border-gray-300 rounded">
            </div>
    
            <div>
                <label class="block text-gray-700">郵便番号</label>
                <input type="text" name="postal_code" class="w-full p-2 border border-gray-300 rounded">
            </div>
    
            <div>
                <label class="block text-gray-700">出身国</label>
                <input type="text" name="country_of_origin" class="w-full p-2 border border-gray-300 rounded">
        </div>

            <div>
                <label class="block text-gray-700">メールアドレス</label>
                <input type="email" name="email" class="w-full p-2 border border-gray-300 rounded">
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600">
                送信
            </button>
        </form>
    </div>